<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/platoID"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"

    card_view:cardElevation="0dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#806E752C"
    app:cardElevation="0dp"
    app:cardCornerRadius="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">
            <LinearLayout
                android:id="@+id/contendCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/platoTitulo"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Americano triple de casa"
                        android:fontFamily="cursive"
                        android:textSize="40dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/add"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/add" />
                        <ImageView
                            android:id="@+id/remove"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/remove" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <TextView
                        android:id="@+id/platoDescripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Lorem ipsum dolor sit amet consectetur adipiscing elit habitant habitasse porttitor penatibus pulvinar velit, aliquet bibendum accumsan commodo blandit vestibulum condimentum interdum porta sapien auctor. Vulputate cubilia quis curabitur euismod class cum hac velit"
                        android:textStyle="italic"
                        />
                    <TextView
                        android:id="@+id/platoPrecio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="precio: "
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:id="@+id/cantidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        />


                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>